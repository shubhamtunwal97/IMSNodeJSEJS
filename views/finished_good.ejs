<% include partials/header.ejs %>
<head>
	<style>
		.master-button{
			float:right;
		}
		
	</style>
</head>
<br>
<h1 align="center">Finished Goods</h1>
<br>
<div class="container-fluid">
	<div class="row">
		<div class="col-md-4">
			<form action="/finished_good/search/category" method="post" class="form-inline">
				<select name="category" class="form-control">
					<option value="" hidden selected>Select Category</option>
					<option value="Fuse Box">Fuse Box</option>
					<option value="Indicator">Indicator</option>
					<option value="Magneto">Magneto</option>
					<option value="Battery Cable">Battery Cable</option>
					<option value="Lead Wires">Lead Wires</option>
					<option value="Piaggio">Piaggio</option>
					<option value="Pigtail">Pigtail</option>
					<option value="Spare Part (SPD)">Spare Part (SPD)</option>
				</select>
				<button type="submit" class="btn btn-dark">Go!</button>
			</form>
		</div>	
	</div>
	<br><br>
	<table class="table table-striped table-bordered table-hover">
		<thead class="thead-dark">
			<tr>
				<th>#</th>
				<th>Description</th>
				<th>Part Number</th>
				<th>Category</th>
				<th>Customer</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% for(var i=0;i<finished_goods.length;i++){ %>
				<tr>
					<td><%= i+1 %></td>
					<td><%= finished_goods[i].name %></td>
					<td><%= finished_goods[i].code %></td>
					<td><%= finished_goods[i].category %></td>
					<td><%= finished_goods[i].customer %></td>

					<td><a href="/finished_good/<%= finished_goods[i].code %>" class="btn btn-info btn-block">Edit</td>
				</tr>
			<% } %>
		</tbody>
	</table>
	<a href="/finished_good/new" class="btn btn-danger btn-block">New Finished Good </a>
	<div class="row">
		<div class="col-md-3"></div>
	</div>
</div>
<script>
	new TableExport(document.getElementsByTagName("table"),{bootstrap:false,headers:true,formats:['csv','xls','xlsx'],ignoreCols:[0,7]});
</script>
<% include partials/footer.ejs %>