<% include partials/header.ejs %>
<br>
<h1 align="center">Report By Name</h1>
<div class="container jumbotron">
	<form action="/report/name" method="post">
		<div class="row">
			<div class="col-md-6">
				<label for="raw_material_name">Description</label>
				<input type="text" name="raw_material" id="raw_material_name" list="Product" required class="form-control">
					<datalist id="Product" name="Product">
						<% for(var i=0;i<raw_materials.length;i++){ %>
								<option value="<%= raw_materials[i].code %>$<%= raw_materials[i].DTPL_code %>$<%= raw_materials[i].name %>"><%= raw_materials[i].name %>/<%= raw_materials[i].code %></option>
						<% } %>
					</datalist>
			</div>
		</div>
		<br>
		<div class="row">
			<div class="col-md-6">
				<label for="from">From</label>
				<input type="date" name="from" class="form-control" id="from" required>
			</div>
			<div class="col-md-6">
				<label for="to">To</label>
				<input type="date" name="to" id="to" required class="form-control">
			</div>
		</div>
		<br>
		<button type="submit" class="btn btn-primary">Generate</button>
	</form>
</div>

<% include partials/footer.ejs %>