<% include partials/header.ejs %>
<div class="container jumbotron">
	<h1 align="center">Update/Delete Supplier</h1>
	<br>
	<form action="/supplier/<%= supplier.code %>?_method=PUT" method="POST" onsubmit="return confirm('Are you sure you wan to update this Supplier?');">
		<div class="row">
			<div class="col-md-6">
				<label for="supplier.name">Name</label>
				<input type="text" value="<%= supplier.name %>" id="supplier.name" name="supplier[name]" class="form-control" required>
			</div>
		</div>
		<div class="row">
			<div class="col-md-6">
				<label for="supplier.code">Code</label>
				<input type="text" value="<%= supplier.code %>" id="supplier.code" name="supplier[code]" class="form-control" required>
			</div>
		</div>
		<br>
		<h4>Address Details</h4>
		<div class="row">
			<div class="col-md-6">
				<label for="supplier.address1">Address 1</label>
				<input type="text" value="<%= supplier.address1 %>" id="supplier.address1" name="supplier[address1]" class="form-control" required>
			</div>
			<div class="col-md-6">
				<label for="supplier.address2">Address 2</label>
				<input type="text" value="<%= supplier.address2 %>" id="supplier.address2" name="supplier[address2]" class="form-control" placeholder="Address 2" >
			</div>
		</div>
		<div class="row">
			<div class="col-md-6">
				<label for="supplier.city">City</label>
				<input type="text" value="<%= supplier.city %>" id="supplier.city" name="supplier[city]" class="form-control" required>
			</div>
			<div class="col-md-6">
				<label for="supplier.state">State</label>
				<input type="text" value="<%= supplier.state %>" id="supplier.state" name="supplier[state]" class="form-control" required>
			</div>
		</div>
		<br>
		<h4>GST Details</h4>
		<div class="row">
			<div class="col-md-6">
				<label for="">GST No</label>
				<input type="text" value="<%= supplier.GST_no %>" id="supplier.GST_no" name="supplier[GST_no]" class="form-control" required>
			</div>
			<div class="col-md-6">
				<label for="">PAN No</label>
				<input type="text" value="<%= supplier.PAN_no %>" id="supplier.PAN_no" name="supplier[PAN_no]" class="form-control" required>
			</div>
		</div>
		<br>
		<button type="submit" class="btn btn-success">Update</button>
	</form>
	<br><br>
	<form action="/supplier/<%= supplier.code %>?_method=DELETE" method="POST">
		<button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this Supplier?');">Delete</button>
	</form>
</div>
<% include partials/footer.ejs %>
